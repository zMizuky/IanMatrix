{
  "name": "linkita",
  "version": "4",
  "description": "A clean and elegant blog theme for Zola. Linkita is based on Kita and Hugo-Paper and is multilingual and SEO friendly.",
  "homepage": "https://codeberg.org/salif/linkita",
  "license": "MIT",
  "author": {
    "name": "Salif Mehmed",
    "email": "mail@salif.eu",
    "url": "https://salif.eu"
  },
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/salif/linkita.git"
  },
  "scripts": {
    "dev:css": "tailwindcss -i static/app.css -o static/main.min.css --minify --watch",
    "build:css": "tailwindcss -i static/app.css -o static/main.min.css --minify",
    "build:nomincss": "tailwindcss -i static/app.css -o static/main.css",
    "build:js": "terser -o static/js/zola-theme.min.js static/js/theme/color.js static/js/theme/*.js",
    "build:gcJS": "terser static/js/gc.js -o static/js/gc.min.js"
  },
  "devDependencies": {
    "@iarna/toml": "^2.2.5",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "execa": "^9.6.1",
    "instant.page": "^5.2.0",
    "katex": "^0.16.27",
    "simple-icons": "^14.15.0",
    "tailwindcss": "^4.1.18",
    "terser": "^5.44.1"
  }
}
